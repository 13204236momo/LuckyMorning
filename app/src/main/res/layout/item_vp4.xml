<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_scan_black"
        android:visibility="gone"/>

    <com.example.zhoumohan.luckymorning.common.widget.ParticleBlastView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:src ="@mipmap/pic"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ气泡"/>
    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_qq"
        android:text="map地图"/>
    <Button
        android:id="@+id/btn_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_map"
        android:text="旋转圆"/>
    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_circle"
        android:text="底部dialog"/>
    <Button
        android:id="@+id/btn_vlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dialog"
        android:text="VLayout"/>
    <Button
        android:id="@+id/btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dialog"
        android:layout_toRightOf="@+id/btn_vlayout"
        android:text="画廊"/>
</RelativeLayout>